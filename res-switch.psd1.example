@{
    # List of resolutions to display in the UI
    # Each resolution needs: Name, Width, Height
    # Optional: Shortcut (keyboard key 1-9)
    Resolutions = @(
        @{
            Name = "5K Ultrawide"
            Width = 5120
            Height = 1440
            Shortcut = "1"  # Press 1 to activate
        },
        @{
            Name = "4K Ultra HD"
            Width = 3840
            Height = 2160
            Shortcut = "2"  # Press 2 to activate
        },
        @{
            Name = "QHD (1440p)"
            Width = 2560
            Height = 1440
            Shortcut = "3"  # Press 3 to activate
        },
        @{
            Name = "Full HD (1080p)"
            Width = 1920
            Height = 1080
            Shortcut = "4"  # Press 4 to activate
        },
        @{
            Name = "HD+ (900p)"
            Width = 1600
            Height = 900
            Shortcut = "5"  # Press 5 to activate
        },
        @{
            Name = "WXGA+"
            Width = 1440
            Height = 900
            Shortcut = "6"  # Press 6 to activate
        },
        @{
            Name = "HD Ready (720p)"
            Width = 1280
            Height = 720
            Shortcut = "7"  # Press 7 to activate
        },
        @{
            Name = "Gaming Mode"
            Width = 1280
            Height = 1024
            Shortcut = "8"  # Press 8 to activate
        },
        @{
            Name = "Legacy (1024x768)"
            Width = 1024
            Height = 768
            Shortcut = "9"  # Press 9 to activate
        }
    )

    # Optional: Window dimensions
    # WindowHeight is auto-calculated based on number of resolutions if not specified
    # WindowWidth = 400  # Default is 400
}

# USAGE INSTRUCTIONS:
# 1. Copy this file to "res-switch.psd1" (remove the .example extension)
# 2. Place it in the same directory as res-switch.ps1
# 3. Customize the resolutions to match your needs
# 4. Remove any resolutions you don't need
# 5. The script will automatically load this configuration
#
# ALTERNATIVE LOCATION:
# You can also place the config file at: %USERPROFILE%\.res-switch\res-switch.psd1
#
# KEYBOARD SHORTCUTS:
# - Number keys 1-9: Quick switch to corresponding resolution
# - ESC: Close the application
#
# NOTES:
# - Maximum of 9 resolutions supported (due to keyboard shortcuts)
# - The window height adjusts automatically based on the number of resolutions
# - If no config file is found, the script uses default resolutions (4K, 1080p, 1280x1024)